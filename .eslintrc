{
  "extends": "airbnb-base",
  "rules": {
    "indent": 0,
    "prefer-destructuring": ["error", {
      "array": false,
      "object": true
    }],
    "no-shadow": ["error", {
      "allow": ["err", "error", "reply", "dt", "url"]
    }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "linebreak-style": ["error", "windows"],
    "no-use-before-define": ["error", { "functions": false }],
    "no-console": "off"
  }
}